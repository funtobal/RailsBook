<table class="table table-striped table-bordered table-hover" data-controller="events">
  <thead class="table-dark">
    <tr>
      <th scope="col">Book Title</th>
      <th scope="col">Author Name</th>
      <th scope="col">Published Year</th>
      <th scope="col">Rating</th>
      <th scope="col">Year Read</th>
      <th scope="col">Genre</th>      
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <% if book.user == current_user%>
       <tr data-action="click->events#rowClick"> 
        <td><%= link_to book.book_name, book %></td>
        <td><%= book.author_name%></td>
        <td><%= book.published_year%></td>
        <td><%= book.rating%></td>
        <td><%= book.year_read%></td>
        <td><%= book.genre%></td>
       </tr> 
      <% end %>  
    <% end %>
  </tbody>
</table>

<%= link_to "New book", new_book_path, class:"btn btn-info" %>

<% else %>
  <h1>BookList</h1>
  Welcome to the BookList Application....
<% end %>
